    <script type="text/javascript">

        var usersJSON = <%- JSON.stringify(users) %>;
        console.log(usersJSON);

        var voteJSON = <%- JSON.stringify(vote) %>;
        console.log("vote json", voteJSON);
    
        // ***** STATISTIQUE VOTE 1, 2, 3 et 4 ***** 

        let idVote1 = voteJSON[0]._id;
        let idVote2 = voteJSON[1]._id;
        let idVote3 = voteJSON[2]._id;
        let idVote4 = voteJSON[3]._id;

        // Calculer le nombre de présent && s'ils ont voté
        let voteInProgress = document.querySelectorAll(".vote-in-progress");

        let present = 0;

        let presentVote1 = 0;
        let presentVote2 = 0;
        let presentVote3 = 0;
        let presentVote4 = 0;
        let presentVote5 = 0;

        for(let i=0; i<usersJSON.length; i++){
            if(usersJSON[i].statut == true){
                present += 1;
            }
            (usersJSON[i].vote).forEach(function (element){
                if(usersJSON[i].statut == true && element.idVote == idVote1){
                    presentVote1 += 1;
                } else if(usersJSON[i].statut == true && element.idVote == idVote2){
                    presentVote2 += 1;
                } else if(usersJSON[i].statut == true && element.idVote == idVote3){
                    presentVote3 += 1;
                } else if (usersJSON[i].statut == true && element.idVote == idVote4){
                    presentVote4 += 1;
                }
            });
        }
        
        voteInProgress[0].innerText = presentVote1 + " / " + present;
        voteInProgress[1].innerText = presentVote2 + " / " + present;
        voteInProgress[2].innerText = presentVote3 + " / " + present;
        voteInProgress[3].innerText = presentVote4 + " / " + present;

        console.log("nb de present", present)
        console.log("nb de vote 1", presentVote1)
        console.log("nb de vote 2", presentVote2)
        console.log("nb de vote 3", presentVote3)
        console.log("nb de vote 4", presentVote4)
            
        var dataPreferences = {
        	series: [
        		[25, 30, 20, 25]
        	]
        };

        var optionsPreferences = {
        	donut: true,
        	donutWidth: 40,
        	startAngle: 0,
        	total: 100,
        	showLabel: false,
        	axisX: {
        		showGrid: false
        	}
        };

        var Vote1PourResult = 0;
        var Vote1ContreResult = 0;
        var Vote1Total = 0;
        var Vote1PourPourcentage = 0;
        var Vote1ContrePourcentage = 0;

        var Vote2PourResult = 0;
        var Vote2ContreResult = 0;
        var Vote2Total = 0;
        var Vote2PourPourcentage = 0;
        var Vote2ContrePourcentage = 0;

        var Vote3PourResult = 0;
        var Vote3ContreResult = 0;
        var Vote3Total = 0;
        var Vote3PourPourcentage = 0
        var Vote3ContrePourcentage = 0;

        var Vote4PourResult = 0;
        var Vote4ContreResult = 0;
        var Vote4Total = 0;
        var Vote4PourPourcentage = 0;
        var Vote4ContrePourcentage = 0;


        for (let i = 0; i < usersJSON.length; i++){
            (usersJSON[i].vote).forEach(function (element){
                if(element.idVote == idVote1){

                    //VOTE 1 RESULTS
                    Vote1PourResult =  Vote1PourResult + Number(element.pour);
                    Vote1ContreResult =  Vote1ContreResult + Number(element.contre);
                    Vote1Total = Vote1PourResult + Vote1ContreResult;
                    Vote1PourPourcentage =  Vote1PourResult * 100 / Vote1Total;
                    Vote1ContrePourcentage =  Vote1ContreResult * 100 / Vote1Total;

                } else if(element.idVote == idVote2){

                    //VOTE 2 RESULTS
                    Vote2PourResult =  Vote2PourResult + Number(element.pour);
                    Vote2ContreResult =  Vote2ContreResult + Number(element.contre);
                    Vote2Total = Vote2PourResult + Vote2ContreResult;
                    Vote2PourPourcentage =  Vote2PourResult * 100 / Vote2Total;
                    Vote2ContrePourcentage =  Vote2ContreResult * 100 / Vote2Total;

                } else if (element.idVote == idVote3){

                    //VOTE 3 RESULTS
                    Vote3PourResult =  Vote3PourResult + Number(element.pour);
                    Vote3ContreResult =  Vote3ContreResult + Number(element.contre);
                    Vote3Total = Vote3PourResult + Vote3ContreResult;
                    Vote3PourPourcentage =  Vote3PourResult * 100 / Vote3Total;
                    Vote3ContrePourcentage =  Vote3ContreResult * 100 / Vote3Total;

                } else if (element.idVote == idVote4){

                    //VOTE 4 RESULTS
                    Vote4PourResult =  Vote4PourResult + Number(element.pour);
                    Vote4ContreResult =  Vote4ContreResult + Number(element.contre);
                    Vote4Total = Vote4PourResult + Vote4ContreResult;
                    Vote4PourPourcentage =  Vote4PourResult * 100 / Vote4Total;
                    Vote4ContrePourcentage =  Vote4ContreResult * 100 / Vote4Total;
                }
            })
        }

        // Vote 1 statistics 
        Chartist.Pie('#chartVote1', dataPreferences, optionsPreferences);
        Chartist.Pie('#chartVote1', {
          labels: [Math.round(Vote1PourPourcentage)+ "%",Math.round(Vote1ContrePourcentage)+ "%"],
          series: [Vote1PourPourcentage, Vote1ContrePourcentage ]
        });


        // Vote 2 statistics 
        Chartist.Pie('#chartVote2', dataPreferences, optionsPreferences);
        Chartist.Pie('#chartVote2', {
          labels: [Math.round(Vote2PourPourcentage) + "%" ,Math.round(Vote2ContrePourcentage) + "%"],
          series: [Vote2PourPourcentage, Vote2ContrePourcentage ]
        });

        // Vote 3 statistics 
        Chartist.Pie('#chartVote3', dataPreferences, optionsPreferences);
        Chartist.Pie('#chartVote3', {
          labels: [Math.round(Vote3PourPourcentage) + "%" ,Math.round(Vote3ContrePourcentage) + "%"],
          series: [Vote3PourPourcentage, Vote3ContrePourcentage ]
        });

        // Vote 4 statistics 
        Chartist.Pie('#chartVote4', dataPreferences, optionsPreferences);
        Chartist.Pie('#chartVote4', {
          labels: [Math.round(Vote4PourPourcentage) + "%" ,Math.round(Vote4ContrePourcentage) + "%"],
          series: [Vote4PourPourcentage, Vote4ContrePourcentage ]
        });

        // ***** STATISTIQUE VOTE 5 *****

        let trList = document.querySelectorAll(".tr-list");
        let rang = document.querySelectorAll(".rang");
        let candidats = document.querySelectorAll(".candidats");
        let totalVote = document.querySelectorAll(".total-vote");
        let totalMandats = document.querySelectorAll(".total-mandats");
        let resultatPourcentage = document.querySelectorAll(".resultat-pourcentage");
        let idVote5 = voteJSON[4]._id;

        let nbMandatTotal = 0;

        let listeCandidats = {
            "BELDA Rémy": 0, 
            "BEYRONNEAU Christophe": 0, 
            "CORBEAU Mario": 0, 
            "CRESENCE Cédric": 0, 
            "DESPRAIRIES J Marie": 0, 
            "DIALLO Thierno": 0, 
            "DRULA Jessica": 0, 
            "ETALE Gérard": 0, 
            "EUPHRASIE Sully": 0, 
            "GALLAIS Yannick": 0, 
            "GALIMEDE Béatrice": 0, 
            "GANGAMA William": 0, 
            "GRONDIN Patrick": 0, 
            "GUEZELOT David": 0, 
            "HOARAU Barthélémy": 0, 
            "HOARAU Gilbert": 0, 
            "HOARAU Louise": 0, 
            "IGOUFE Claudine": 0, 
            "LAGARRIGUE Johnny": 0, 
            "LAURENCE Adrien": 0, 
            "LAURET Janick": 0, 
            "LAYEMAR Gina": 0, 
            "LEGROS Mickael": 0, 
            "LEPERLIER Patrick": 0, 
            "MAILLOT Karl": 0, 
            "MANI Alain": 0, 
            "MARMILLOD Claude": 0,
            "MICHEL Béatrice": 0, 
            "MOREL Stéphanie": 0, 
            "MOULAN Thierry": 0, 
            "PAYET Jacques Henri": 0, 
            "PEYROUSET Corine": 0, 
            "RIVIERE Jean Pierre": 0, 
            "ROBERT Nadège": 0, 
            "SELLIER Jean François": 0, 
            "SMITH Johan": 0, 
            "TRECASSE Georges": 0, 
            "VELIA Jean Marc": 0
        };

        // CALCUL du cumul de mandats pour chaque candidat
        // Réccupérer la liste des utilisateurs
        for(let i=0; i<usersJSON.length; i++){
            (usersJSON[i].vote).forEach(function (element){
                if(element.idVote == idVote5){
                    //Récupérer leur choix du vote 5
                    for(let j=0; j<element.choix.length; j++){

                        // Cumuler les mandats reçus
                        listeCandidats[element.choix[j]] += parseInt(usersJSON[i].nbMandat);
                    }
                }
            })
        }

        keysSorted = Object.keys(listeCandidats).sort(function(a,b){
            return listeCandidats[b]-listeCandidats[a]
        })

        // Calcul du TOTAL MANDATS des présents
        for(let i=0; i<usersJSON.length; i++){
            if(usersJSON[i].statut === true){
                nbMandatTotal += parseInt(usersJSON[i].nbMandat);
            }
        }

        // FRONT Admin dashboard DYNAMISATION : remplir la colonne TOTAL MANDAT
        totalMandats.forEach(function(element) {
            element.innerText = nbMandatTotal;
        });

        // FRONT Admin dashboard DYNAMISATION : remplir la colonne TOTAL VOTE
        // Pour chaque CLASS .candidats (ATTENTION c'est du DOM, ce n'est pas côté serveur)

        let compte = 0;

        candidats.forEach(function(element) {
            element.innerText = keysSorted[compte];
            compte +=1;

            // Parcourir l'objet spécialement créé dans cette view
            for (let prop in listeCandidats) {

                // si l'élément candidat correspont avec l'indexe de l'objet, attribuer le nbMandat reçu au TD suivant
                if(element.innerText == prop){
                    $(element).next().text(listeCandidats[prop]);
                    let pourcentage = Math.round((listeCandidats[prop]/nbMandatTotal)*100);
                    $(element).next().next().next().text(pourcentage + "%");
                }
            }
        });

        for(let i=0; i<24; i++){
            $(trList[i]).addClass("winners");
        }

	</script>
