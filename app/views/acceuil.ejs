  <body>

    <div id="main"> 
            <div class="container">
              <div class="row">
                <div class="col-md-4"></div>
        
                <div class="col-md-4 content">  
                        <h1> Ajouter un votant</h1>
                        <form method="post" action="/addname">
                         <label style="text-align:left">Entrez les données du votant</label><br>
                            <input type="text" name="Syndicats" placeholder="Syndicats.." required>
                            <input type="text" name="HorsPac" placeholder="HorsPac..." required>
                            <input type="text" name="Total" placeholder="Total..." required>        
                            <input type="text" name="Delegues" placeholder="Délégues..." required>
                            <input type="text" name="Mandats" placeholder="Mandats..." required>
                            <input type="text" name="Conseillers" placeholder="Conseillers..." required>
                         
                            <button type="submit" value="ajouter votant"> Ajouter </button>
                        </form>
                        <div class="contentFooter"></div>
                        
                </div>
        
                <div class="col-md-4"></div> 
              </div>
            </div>
          </div>



    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>

    <script src="js/bootstrap.min.js"></script>

